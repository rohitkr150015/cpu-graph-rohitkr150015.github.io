<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.cpu-graph" path="/org/gnome/shell/extensions/cpu-graph/">
    
    <key name="update-interval" type="d">
      <default>1.0</default>
      <summary>Update interval</summary>
      <description>How often to update the graph in seconds</description>
      <range min="0.5" max="10.0"/>
    </key>
    
    <key name="graph-width" type="i">
      <default>120</default>
      <summary>Graph width</summary>
      <description>Width of the CPU graph in pixels</description>
      <range min="60" max="300"/>
    </key>
    
    <key name="graph-height" type="i">
      <default>24</default>
      <summary>Graph height</summary>
      <description>Height of the CPU graph in pixels</description>
      <range min="16" max="48"/>
    </key>
    
    <key name="show-tooltip" type="b">
      <default>true</default>
      <summary>Show tooltip</summary>
      <description>Display CPU percentage when hovering over the graph</description>
    </key>
    
    <key name="smooth-animation" type="b">
      <default>true</default>
      <summary>Smooth animation</summary>
      <description>Enable smooth scrolling animation for the graph</description>
    </key>
    
    <key name="color-scheme" type="s">
      <default>'default'</default>
      <summary>Color scheme</summary>
      <description>Color scheme for the CPU graph</description>
      <choices>
        <choice value='default'/>
        <choice value='monochrome'/>
        <choice value='plasma'/>
        <choice value='ocean'/>
        <choice value='sunset'/>
      </choices>
    </key>
    
    <key name="background-style" type="s">
      <default>'default'</default>
      <summary>Background style</summary>
      <description>Background style for the CPU graph container</description>
      <choices>
        <choice value='default'/>
        <choice value='transparent'/>
        <choice value='dark'/>
        <choice value='light'/>
        <choice value='glass'/>
      </choices>
    </key>
    
    <key name="per-core-mode" type="b">
      <default>false</default>
      <summary>Per-core mode</summary>
      <description>Show individual CPU cores instead of total usage</description>
    </key>
    
    <key name="click-action" type="s">
      <default>'system-monitor'</default>
      <summary>Click action</summary>
      <description>Action to perform when clicking the graph</description>
      <choices>
        <choice value='system-monitor'/>
        <choice value='task-manager'/>
        <choice value='detailed-popup'/>
        <choice value='none'/>
      </choices>
    </key>
    
    <key name="panel-position" type="s">
      <default>'right'</default>
      <summary>Panel position</summary>
      <description>Position in the top panel</description>
      <choices>
        <choice value='left'/>
        <choice value='center'/>
        <choice value='right'/>
      </choices>
    </key>
    
    <key name="bar-width" type="i">
      <default>2</default>
      <summary>Bar width</summary>
      <description>Width of individual bars in pixels</description>
      <range min="1" max="4"/>
    </key>
    
  </schema>
</schemalist>
